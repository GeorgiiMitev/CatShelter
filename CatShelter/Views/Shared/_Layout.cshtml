@using Microsoft.AspNetCore.Razor.TagHelpers;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CatShelter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CatShelter.styles.css" asp-append-version="true" />
    <style>
        nav img {
            display: flex;
            width: 200px;
        }

        nav ul li {
            font-weight: 500;
        }

        footer {
            background-color: orange;
            border: 3px solid black;
            display: flex;
            justify-content: space-evenly;
            padding: 8px 16px;
            position: absolute;
            top: 100%;

        }

        .footer-info {
            width: 25%;
            border: 3px solid black;
        }
        .footer-info-title{
            font-family: cursive;
            font-size: 22px;
            color: black;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="position: relative;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img draggable="false" src="https://i.ibb.co/KrCV9FV/3a523eea0594be103f8542feab3283fd-removebg-preview.png" style="draggable: false;" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cats" asp-action="Index">Осинови</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Adoptions" asp-action="Index">Осиновени</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cages" asp-action="Index">Клетки</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Breeds" asp-action="Index">Породи</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Vaccines" asp-action="Index">Ваксини</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="bottom: auto;">
        <div class="footer-info">
            <div class="text-center">
                <span class="footer-info-title">Бързи връзки</span> <br />
                <a href="https://instagram.com"><img src="https://cdn4.iconfinder.com/data/icons/picons-social/57/38-instagram-2-512.png" width="50px" /></a>
                <a href="https://facebook.com"><img src="https://seeklogo.com/images/F/facebook-icon-black-logo-133935095E-seeklogo.com.png" width="50px" /></a>
                <a href="https://twitter.com"><img src="https://cdn-icons-png.flaticon.com/512/60/60580.png" width="50px" /></a>
                <a href="https://youtube.com"><img src="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/youtube-icon.png" width="50px" /></a>
            </div>
        </div>
        <div class="footer-info">
            <div class="text-center" style="display: flex; flex-direction: column; justify-content: flex-end">
                <span class="footer-info-title">Социални мрежи</span>
                <a href="https://instagram.com"><img src="https://cdn4.iconfinder.com/data/icons/picons-social/57/38-instagram-2-512.png" width="50" />&nbsp; <span style="font-family: cursive;">instagram.com</span></a>
                <a href="https://facebook.com"><img src="https://seeklogo.com/images/F/facebook-icon-black-logo-133935095E-seeklogo.com.png" width="50" />&nbsp;<span style="font-family: cursive;">facebook.com</span></a>
                <a href="https://twitter.com"><img src="https://cdn-icons-png.flaticon.com/512/60/60580.png" width="50" />&nbsp;<span style="font-family: cursive;">twitter.com</span></a>
                <a href="https://youtube.com"><img src="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/youtube-icon.png" width="50" />&nbsp;<span style="font-family: cursive;">youtube.com</span></a>
            </div>
        </div>
        <div class="footer-info">
            <div class="text-center">
                <span class="footer-info-title">Адрес</span> <br />
                <div><iframe style="width: 250px; height: 250px" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23478.8127252714!2d24.76775128441189!3d42.643306096002156!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a9964870ace0b5%3A0xaad95876b628a138!2z0KLRgNC40L7QstC10YI!5e0!3m2!1sbg!2sbg!4v1712132261258!5m2!1sbg!2sbg" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
            </div>
        </div>



    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
