@model CatShelter.Data.Adoption

@{
    ViewData["Title"] = "Details";
}

<h1>Информация за осиновяване</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID на клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clients.Id)
        </dd>
        <dt class = "col-sm-2">
            Име на котката
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cats.Id)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Дата на осиновяване
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdoptionDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактиране</a> |
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>
