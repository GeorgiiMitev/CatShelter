@model CatShelter.Data.Cat

@{
    ViewData["Title"] = "Details";
}
<style>
    img {
        max-width: 100%;
        height: auto;
    }

    .catdescription-container {
        display: flex;
        flex-direction: row;
    }

    .catdescription-image {
        display: flex;
        justify-content: center;
        width: 50%;
        align-items: center;
        flex-wrap
    }

        .catdescription-image img {
            max-width: 100%;
            max-height: 350px;
            object-fit: contain;
            box-shadow: 1px 1px black, 2px 2px black, 3px 3px black, 4px 4px black;
            border-radius: 10px;
            border: 1px solid black;
        }

    .catdescription {
        width: 50%;
        display: flex;
        flex-direction: column;
        padding: 10px;
    }

    .catname {
        background-color: orange;
        width: 50%;
        border-radius: 50px;
        text-align: center;
        font-family: cursive;
        font-size: 22px;
        font-weight: bold;
        border: 3px solid #d18111;
    }

    .namecenter {
        display: flex;
        justify-content: center;
    }

    .catinfo {
        width: 75%;
    }

    .catinfo {
        display: flex;
        flex-direction: row;
        padding: 10px;
        flex-wrap: wrap;
        font-family: cursive;
        font-size: 18px;
    }

        .catinfo dd, dt {
            margin-bottom: 25px;
            border-bottom: 1px solid gray;
            text-shadow: 1px 1px #f57207, 2px 2px #f57207;
            font-weight: 900;
            color: orange;
        }

    .col-sm-10 {
        width: 50%;
    }

    .col-sm-2 {
        width: 50%;
    }

    h1 {
        text-shadow: 1px 1px #f57207, 2px 2px #f57207, 3px 3px #f57207, 4px 4px #f57207;
        font-weight: 900;
        color: orange;
    }

    .imagechange-container {
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: row;
    }
    .image-change{
        padding: 5px;
    }
    .image-change img{
        max-width: 100%;
        height: auto;
    }
</style>

<center><h1>Информация</h1></center>
<div class="catdescription-container">
    <div class="catdescription-image" style="flex-direction: column;">
        <div style="margin-bottom: 50px;">
            <img id="mainImage" src="@ViewBag.images[0]" />
        </div>
        <div class="imagechange-container" style="display: flex; justify-content: space-evenly; flex-wrap: wrap;">
            @foreach (var item in ViewBag.images)
            {
                <div style="width: 33%; margin-bottom: 5px; ">
                    <div>
                        <div class="image-change">
                            <img id="secondaryImage" src="@item" onclick="changeImage('@item');" />
                        </div>
                    </div>
                </div>

            }
        </div>

        @* <img src="@Html.DisplayFor(model => model.ImageURL)" /> *@
    </div>
    <div class="catdescription">
        <div class="namecenter"><span class="catname">@Html.DisplayFor(model => model.Name)</span></div>
        <br />
        <div style="display: flex;justify-content: center;">
            <div class="catinfo">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Age):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Age) <span>Година/и</span>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Color):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Breeds):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Breeds.BreedName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Vaccines):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Vaccines.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cages):
                </dt>
                <dd class="col-sm-10">
                    <span>№ &nbsp;</span>@Html.DisplayFor(model => model.Cages.CageNumber)
                </dd>
                <p>
                    @Html.DisplayFor(model => model.Description)
                </p>

            </div>
        </div>
    </div>

</div>
<script>
    function changeImage(a) {

        document.getElementById("mainImage").src = a;
    }
</script>
