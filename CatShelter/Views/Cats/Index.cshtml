@model IEnumerable<CatShelter.Data.Cat>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table {
        vertical-align: middle;
    }
    tbody img{
        border-radius: 10px;
        max-width: 100%;
        height: auto;
        box-shadow: 1px 1px 3px black;
        border: 1px solid black;
        
    }
    .buttons{
        display: flex;
        flex-direction: column;
    }
    .buttons a{
        margin: 3px 0px;
    }
    .description{
        text-align: justify-all;
        vertical-align: top;
    }
</style>
<h1>Index</h1>

<div class="form-group"><a asp-action="Create" type="submit" class="btn btn-primary">Create</a></div>
                
            
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breeds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breeds.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vaccines.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cages.Id)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImageURL)" width="300" height="200"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <div class=description>
                    @Html.DisplayFor(modelItem => item.Description)
                    </div>
                </td>
                <td>
                    <div class="buttons">
                        <a asp-action="Edit" asp-route-id="@item.Id" type="submit"  class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" type="submit"  class="btn btn-primary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" type="submit"  class="btn btn-primary">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
