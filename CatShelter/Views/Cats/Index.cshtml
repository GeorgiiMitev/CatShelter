@model IEnumerable<CatShelter.Data.Cat>

@{
    ViewData["Title"] = "Index";
}
<style>
    .buttons-admin, .buttons-user {
        display: flex;
        flex-direction: column;
        width: 100%;
    }
    .buttons-admin{
        padding: 10px;
    }
        .buttons-admin a {
            margin: 3px 0px;
        }

    .buttons-admin #edit, #del {        
        background-color: orange;
        border-color: orange;
    }

        .buttons-admin #edit:hover, #del:hover {
            background-color: #f08922;
            border-color: #f08922;
        }
        .buttons-user a {
            margin: 0;
            border-radius: 6px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
            background-color: orange;
            border-color: orange;
            font-size: 20px;
        }
        .buttons-user a:hover{
                background-color: #f08922;
                border-color: #f08922;
        }

    .cats-container {
        padding: 10px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
    }

    .cats {
        border: 3px solid #d18111;
        width: 30%;
        border-radius: 10px;
        display: flex;
        font-family: cursive;
        flex-direction: column;
        margin-bottom: 25px;
    }
    .cats:hover{
        transform: scale(1.03);
    }
        .cats img {
            max-width: 100%;
            height: 252.5px;
            object-fit: contain;
            ;
        }

    .image {
        display: flex;
        justify-content: center;
        padding-top: 100%;
        background-size: cover;
        background-repeat: no-repeat, no-repeat;
    }

    .cat-name {
        background-color: orange;
        font-weight: 800;
        font-size: 25px;
        border-bottom: 3px solid #d18111;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .cats .cat-name {
        text-align: center;
        margin: 0;
    }

    .cat-description {
        flex-direction: row;
    }

    .col-sm-10 {
        width: 50%;
    }

    .col-sm-2 {
        width: 50%;
    }

    @@media screen and (max-width: 991px) {
        .col-sm-10 {
            width: 100%;
            line-height: 1;
        }

        .col-sm-2 {
            width: 100%;
            line-height: 1;
        }
    }

</style>
<center><h1>"Осинови, а не купувай!"</h1></center>
@if (User.IsInRole("Admin") || User.IsInRole("User"))
{
    <center><div class="form-group"><a asp-action="Create" type="submit" class="btn btn-primary">Създай нова обява</a></div></center>
}


<div class="cats-container">
    @foreach (var item in Model)
    {

        <div class="cats">

            <span class="cat-name">@Html.DisplayFor(modelItem => item.Name)</span>
            <a asp-action="Details" asp-route-id="@item.Id">
                <div class="image" style="background-image: url(@Html.DisplayFor(modelItem => item.ImageURL));">
                </div>
            </a>
            <div class="cat-description">
                <div>
                    @* <div>
                <dl class="row" style="position: relative;">
                <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Age) <span>Година/и</span>
                </dd>
                <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Color)
                </dd>
                <dt class="col-sm-2">
                Порода
                </dt>
                <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Breeds.BreedName)
                </dd>
                <dt class="col-sm-2">
                Ваксини
                </dt>
                <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Vaccines.Name)
                </dd>
                <dt class="col-sm-2">
                Клетка
                </dt>
                <dd class="col-sm-10">
                <span>№ &nbsp;</span>@Html.DisplayFor(model => item.Cages.CageNumber)
                </dd>
                </dl>
                </div> *@
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="buttons-admin">
                            <a asp-action="Edit" asp-route-id="@item.Id" type="submit" class="btn btn-primary" id="edit">Редактирай</a>
                            <a asp-action="Details" asp-route-id="@item.Id" type="submit" class="btn btn-primary" id="del">Детайли</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-danger">Изтрий обявата</a>
                        </div>
                    }
                    @if (!User.IsInRole("Admin"))
                    {
                        <div class="buttons-user">
                            <a asp-action="Details" asp-route-id="@item.Id" type="submit" class="btn btn-primary">Детайли</a>
                            @* <a asp-controller="Adoptions" asp-action="CreateCatAdoption" asp-route-catId="@item.Id" type="submit" class="btn btn-primary">Осинови</a> *@
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

