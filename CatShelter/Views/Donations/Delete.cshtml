@model CatShelter.Data.Donation

@{
    ViewData["Title"] = "Delete";
}
<h1>Изтриване</h1>
<h3>Сигурни ли сте, че искате да изтриете този запис?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Дарена сума
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Payment) лв.
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтриване" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </form>
</div>
