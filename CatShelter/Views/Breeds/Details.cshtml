@model CatShelter.Data.Breed

@{
    ViewData["Title"] = "Details";
}

<h1>Информация за порода</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Порода
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BreedName)
        </dd>
        <dt class = "col-sm-2">
            Дата на добавяне на запис
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактирай</a> |
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>
