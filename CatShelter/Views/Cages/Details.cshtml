@model CatShelter.Data.Cage

@{
    ViewData["Title"] = "Details";
}

<h1>Информация за клетка</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер на клетка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CageNumber)
        </dd>
        <dt class = "col-sm-2">
            Дата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Редактиране</a> |
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>
